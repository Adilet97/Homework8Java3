<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/container2"
    android:layout_marginTop="20dp"
    android:layout_width="150dp"
    android:layout_height="83dp"
    android:background="@drawable/shape_item"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/planet"
        android:layout_width="36dp"
        android:layout_height="16dp"
        android:layout_marginTop="8dp"
        android:text="Planet"
        android:textSize="12sp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@id/container2"
        app:layout_constraintStart_toStartOf="@id/container2"
        />
    <TextView
        android:id="@+id/Earth"
        android:layout_width="126dp"
        android:layout_height="43dp"
        android:text="Earth"
        android:textSize="16sp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/planet"
        app:layout_constraintStart_toStartOf="@id/planet"

        />



</androidx.constraintlayout.widget.ConstraintLayout>